<html>
  <head>
    <link rel='stylesheet' type='text/css' href='styles/main.css'
  </head>

  <body>
    <!--Login-->
    <div id='login-wrap'>
      <p id='login-error-display'>&nbsp;</p>
      <form id='send-login'>
          <input size='32' maxLength='32' id='username-box' placeholder='username'/>
          <input type='submit' />
      </form>
    </div>

    <div class='container-fluid' id='app-wrap'>
      <div class='row'>
        <div class='col-sm-3 no-horizontal-padding' style='background-color:lavender'>
          <!--TranscriptLog-->
          <div class='embed-responsive wbh-8by9'>
            <div class='fill-completely vertical-scroll' id='transcript-display'></div>
          </div>
          <!--Castlist-->
          <div class='embed-responsive wbh-16by9'>
            <div class='fill-completely'>
              <p><b>Castlist</b></p>
              <div id='castlist'></div>
            </div>
          </div>
        </div>

        <div class='col-sm-6 no-horizontal-padding' style='background-color:lavenderblush'>
          <!--StageViewport-->
          <div class='embed-responsive embed-responsive-16by9'></div>
          <div class='embed-responsive wbh-32by9'>
            <!--CharacterSpeechBox-->
            <div class='embed-responsive wbh-128by9'>
              <form class='row'>
                <textarea class='col-sm-9' rows='2' id='character-speech-box'></textarea>
                <input class='col-sm-1' type='button' value='speak' />
                <input class='col-sm-2' type='button' value='thought' />
              </form>
            </div>
            <!--EmotionDashboard-->
            <div class='fill-completely'></div>
          </div>
        </div>

        <div class='col-sm-3 no-horizontal-padding' style='background-color:lavender'>
          <!--ChatLog-->
          <div class='embed-responsive wbh-8by9'>
            <div class='fill-completely vertical-scroll' id='chat-display'></div>
          </div>

          <div class='embed-responsive wbh-16by9'>
            <!--MessageBox-->
            <div class='row'>
              <form id='send-message'>
                <input class='col-sm-10' maxLength= '128' id='message-box' placeholder='message' />
                <input class='col-sm-2' type='submit' />
              </form>
            </div>
            <!--Userlist-->
            <div class='fill-completely'>
              <p><b>Userlist</b></p>
              <div id='userlist'></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!--Dependencies-->
    <script src='bower_components/jQuery/dist/jquery.js'></script>
    <script src='bower_components/bootstrap/dist/js/bootstrap.js'></script>
    <script src='/socket.io/socket.io.js'></script>

    <!--scripts-->
    <script src='/scripts/chat.js'></script>
    <script src='/scripts/rp/html/DynamicDiv.js'></script>
    <script src='/scripts/rp/html/ListDiv.js'></script>
  </body>
</html>
